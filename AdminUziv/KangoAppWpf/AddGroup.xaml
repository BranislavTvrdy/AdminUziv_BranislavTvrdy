<Window x:Class="KangoAppWpf.AddGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KangoAppWpf"
        mc:Ignorable="d"
        Title="Vytvorenie novej skupiny" Height="300" Width="400" Icon="Logo_Kango.ico">
    <Grid>
        <Label Content="Meno skupiny:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtNS_Meno" Height="23" Margin="112,13,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

        <Label Content="Typ skupiny:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cbNS_Typ" Margin="112,45,10,0" VerticalAlignment="Top"/>

        <Label Content="Poznnámka:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <RichTextBox Name="txtNS_Poznamka" Height="139" Margin="112,76,10,0" VerticalAlignment="Top"/>
        <Button Margin="112,230,10,0" VerticalAlignment="Top" Click="Button_Click">
            <TextBlock TextWrapping="Wrap" Text="Vytvoriť novú skupinu"/>
        </Button>


    </Grid>
</Window>
